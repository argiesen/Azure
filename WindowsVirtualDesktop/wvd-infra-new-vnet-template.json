{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "The location where the resources will be deployed"
            }
        },
        "wvdStorageAccountName": {
            "type": "string"
        },
        "wvdFileShareName": {
            "type": "string"
        },
        "wvdVirtualNetworkName": {
            "type": "string"
        },
        "wvdVirtualNetworkPrefix": {
            "type": "string"
        },
        "wvdVirtualNetworkSubnetName": {
            "type": "string"
        },
        "wvdVirtualNetworkSubnetPrefix": {
            "type": "string"
        },
        "wvdVirtualNetworkDnsServers": {
            "type": "string"
        },
        "existingRemoteVirtualNetworkName": {
            "type": "string"
        },
        "existingRemoteVirtualNetworkResourceGroupName": {
            "type": "string"
        }
    },
    "functions": [],
    "variables": {},
    "resources": [
        {
            "name": "storageAccountShareLinkedTemplate",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-10-01",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/Azure/azure-quickstart-templates/master/101-storage-file-share/azuredeploy.json",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "storageAccountName": {
                        "value": "[parameters('wvdStorageAccountName')]"
                    },
                    "fileShareName": {
                        "value": "[parameters('wvdFileShareName')]"
                    }
                }
            }
        },
        {
            "name": "virtualNetworkLinkedTemplate",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-10-01",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/argiesen/Azure/main/ARMTemplates/vnet-snet-custom-dns/azuredeploy.json",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "VirtualNetworkName": {
                        "value": "[parameters('wvdVirtualNetworkName')]"
                    },
                    "VirtualNetworkPrefix": {
                        "value": "[parameters('wvdVirtualNetworkPrefix')]"
                    },
                    "VirtualSubnetName": {
                        "value": "[parameters('wvdVirtualNetworkSubnetName')]"
                    },
                    "VirtualSubnetPrefix": {
                        "value": "[parameters('wvdVirtualNetworkSubnetPrefix')]"
                    },
                    "VirtualNetworkDnsServers": {
                        "value": "[parameters('wvdVirtualNetworkDnsServers')]"
                    }
                }
            }
        },
        {
            "name": "vnetPeeringLinkedTemplate",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-10-01",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/deployments', 'virtualNetworkLinkedTemplate')]"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/Azure/azure-quickstart-templates/master/201-existing-vnet-to-vnet-peering/azuredeploy.json",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "existingLocalVirtualNetworkName": {
                        "value": "[parameters('wvdVirtualNetworkName')]"
                    },
                    "existingRemoteVirtualNetworkName": {
                        "value": "[parameters('existingRemoteVirtualNetworkName')]"
                    },
                    "existingRemoteVirtualNetworkResourceGroupName": {
                        "value": "[parameters('existingRemoteVirtualNetworkResourceGroupName')]"
                    }
                }
            }
        }
    ],
    "outputs": {}
}